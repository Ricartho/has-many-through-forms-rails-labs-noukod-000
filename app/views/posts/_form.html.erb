<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %><br>
  <%= f.text_area :content %><br><br>

  <%= f.label "Select category"%><br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>

  <%= f.label "Create a new category" %> <br>
  <%= f.fields_for :categories do |cat_attributes| %>
    <%= cat_attributes.text_field :name %>
  <%end%>

  <%=f.submit%>
<%end%>
